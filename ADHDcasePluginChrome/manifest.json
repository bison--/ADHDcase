{
    "manifest_version": 2,
    "name": "ADHDcase",
    "description": "This extension makes the first syllable of each word on a webpage bold, making it faster readable for most ADHD folks.",
    "version": "0.0.1",
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
