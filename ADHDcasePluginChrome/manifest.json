{
    "manifest_version": 2,
    "name": "ADHDcase",
    "description": "Makes text on websites start bold, making it faster readable for most ADHD folks.\n\n",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
